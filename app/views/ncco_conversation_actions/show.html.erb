<%- model_class = NccoConversationAction -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @ncco_conversation_action.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:mute) %>:</strong></dt>
  <dd><%= @ncco_conversation_action.mute %></dd>
  <dt><strong><%= model_class.human_attribute_name(:earmuff) %>:</strong></dt>
  <dd><%= @ncco_conversation_action.earmuff %></dd>
  <dt><strong><%= model_class.human_attribute_name(:event_url) %>:</strong></dt>
  <dd><%= @ncco_conversation_action.event_url %></dd>
  <dt><strong><%= model_class.human_attribute_name(:event_method) %>:</strong></dt>
  <dd><%= @ncco_conversation_action.event_method %></dd>
  <dt><strong><%= model_class.human_attribute_name(:enter_sound) %>:</strong></dt>
  <dd><%= @ncco_conversation_action.enter_sound %></dd>
  <dt><strong><%= model_class.human_attribute_name(:exit_sound) %>:</strong></dt>
  <dd><%= @ncco_conversation_action.exit_sound %></dd>
  <dt><strong><%= model_class.human_attribute_name(:music_on_hold_url) %>:</strong></dt>
  <dd><%= @ncco_conversation_action.music_on_hold_url %></dd>
  <dt><strong><%= model_class.human_attribute_name(:sound_on_enter) %>:</strong></dt>
  <dd><%= @ncco_conversation_action.sound_on_enter %></dd>
  <dt><strong><%= model_class.human_attribute_name(:end_on_exit) %>:</strong></dt>
  <dd><%= @ncco_conversation_action.end_on_exit %></dd>
  <dt><strong><%= model_class.human_attribute_name(:location) %>:</strong></dt>
  <dd><%= @ncco_conversation_action.location %></dd>
  <dt><strong><%= model_class.human_attribute_name(:moderator_controls) %>:</strong></dt>
  <dd><%= @ncco_conversation_action.moderator_controls %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              ncco_conversation_actions_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_ncco_conversation_action_path(@ncco_conversation_action), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              ncco_conversation_action_path(@ncco_conversation_action),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
