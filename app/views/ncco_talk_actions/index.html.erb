<%- model_class = NccoTalkAction -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:loop) %></th>
      <th><%= model_class.human_attribute_name(:text) %></th>
      <th><%= model_class.human_attribute_name(:level) %></th>
      <th><%= model_class.human_attribute_name(:voice_name) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @ncco_talk_actions.each do |ncco_talk_action| %>
      <tr>
        <td><%= link_to ncco_talk_action.id, ncco_talk_action_path(ncco_talk_action) %></td>
        <td><%= ncco_talk_action.loop %></td>
        <td><%= ncco_talk_action.text %></td>
        <td><%= ncco_talk_action.level %></td>
        <td><%= ncco_talk_action.voice_name %></td>
        <td><%=l ncco_talk_action.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_ncco_talk_action_path(ncco_talk_action), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      ncco_talk_action_path(ncco_talk_action),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_ncco_talk_action_path,
            :class => 'btn btn-primary' %>
