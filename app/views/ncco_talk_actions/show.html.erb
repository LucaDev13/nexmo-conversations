<%- model_class = NccoTalkAction -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:loop) %>:</strong></dt>
  <dd><%= @ncco_talk_action.loop %></dd>
  <dt><strong><%= model_class.human_attribute_name(:text) %>:</strong></dt>
  <dd><%= @ncco_talk_action.text %></dd>
  <dt><strong><%= model_class.human_attribute_name(:level) %>:</strong></dt>
  <dd><%= @ncco_talk_action.level %></dd>
  <dt><strong><%= model_class.human_attribute_name(:voice_name) %>:</strong></dt>
  <dd><%= @ncco_talk_action.voice_name %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              ncco_talk_actions_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_ncco_talk_action_path(@ncco_talk_action), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              ncco_talk_action_path(@ncco_talk_action),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
