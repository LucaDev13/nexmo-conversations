    <%=f.error_span(:limit) %>
  </div>
  <div class="form-group">
    <%= f.label :from, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :from, :class => 'form-control' %>
    </div>
    <%=f.error_span(:from) %>
  </div>
  <div class="form-group">
    <%= f.label :halt_on_fail, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :halt_on_fail, :class => 'form-control' %>
