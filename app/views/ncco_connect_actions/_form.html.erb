<%= form_for @ncco_connect_action, :html => { :class => "form-horizontal ncco_connect_action" } do |f| %>

  <% if @ncco_connect_action.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@ncco_connect_action.errors.count, "error") %> prohibited this ncco_connect_action from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @ncco_connect_action.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :event_url, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :event_url, :class => 'form-control' %>
    </div>
    <%=f.error_span(:event_url) %>
  </div>
  <div class="form-group">
    <%= f.label :event_method, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :event_method, :class => 'form-control' %>
    </div>
    <%=f.error_span(:event_method) %>
  </div>
  <div class="form-group">
    <%= f.label :backup_url, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :backup_url, :class => 'form-control' %>
    </div>
    <%=f.error_span(:backup_url) %>
  </div>
  <div class="form-group">
    <%= f.label :backup_method, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :backup_method, :class => 'form-control' %>
    </div>
    <%=f.error_span(:backup_method) %>
  </div>
  <div class="form-group">
    <%= f.label :timeout, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :timeout, :class => 'form-control' %>
    </div>
    <%=f.error_span(:timeout) %>
  </div>
