<%- model_class = EventUrl -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:uuid) %>:</strong></dt>
  <dd><%= @event_url.uuid %></dd>
  <dt><strong><%= model_class.human_attribute_name(:conversation_uuid) %>:</strong></dt>
  <dd><%= @event_url.conversation_uuid %></dd>
  <dt><strong><%= model_class.human_attribute_name(:to) %>:</strong></dt>
  <dd><%= @event_url.to %></dd>
  <dt><strong><%= model_class.human_attribute_name(:from) %>:</strong></dt>
  <dd><%= @event_url.from %></dd>
  <dt><strong><%= model_class.human_attribute_name(:direction) %>:</strong></dt>
  <dd><%= @event_url.direction %></dd>
  <dt><strong><%= model_class.human_attribute_name(:recording_url) %>:</strong></dt>
  <dd><%= @event_url.recording_url %></dd>
  <dt><strong><%= model_class.human_attribute_name(:rate) %>:</strong></dt>
  <dd><%= @event_url.rate %></dd>
  <dt><strong><%= model_class.human_attribute_name(:start_time) %>:</strong></dt>
  <dd><%= @event_url.start_time %></dd>
  <dt><strong><%= model_class.human_attribute_name(:network) %>:</strong></dt>
  <dd><%= @event_url.network %></dd>
  <dt><strong><%= model_class.human_attribute_name(:status) %>:</strong></dt>
  <dd><%= @event_url.status %></dd>
  <dt><strong><%= model_class.human_attribute_name(:price) %>:</strong></dt>
  <dd><%= @event_url.price %></dd>
  <dt><strong><%= model_class.human_attribute_name(:duration) %>:</strong></dt>
  <dd><%= @event_url.duration %></dd>
  <dt><strong><%= model_class.human_attribute_name(:end_time) %>:</strong></dt>
  <dd><%= @event_url.end_time %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              event_urls_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_event_url_path(@event_url), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              event_url_path(@event_url),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
