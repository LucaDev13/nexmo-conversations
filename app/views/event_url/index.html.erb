<%- model_class = EventUrl -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:uuid) %></th>
      <th><%= model_class.human_attribute_name(:conversation_uuid) %></th>
      <th><%= model_class.human_attribute_name(:to) %></th>
      <th><%= model_class.human_attribute_name(:from) %></th>
      <th><%= model_class.human_attribute_name(:direction) %></th>
      <th><%= model_class.human_attribute_name(:recording_url) %></th>
      <th><%= model_class.human_attribute_name(:rate) %></th>
      <th><%= model_class.human_attribute_name(:start_time) %></th>
      <th><%= model_class.human_attribute_name(:network) %></th>
      <th><%= model_class.human_attribute_name(:status) %></th>
      <th><%= model_class.human_attribute_name(:price) %></th>
      <th><%= model_class.human_attribute_name(:duration) %></th>
      <th><%= model_class.human_attribute_name(:end_time) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @event_urls.each do |event_url| %>
      <tr>
        <td><%= link_to event_url.id, event_url_path(event_url) %></td>
        <td><%= event_url.uuid %></td>
        <td><%= event_url.conversation_uuid %></td>
        <td><%= event_url.to %></td>
        <td><%= event_url.from %></td>
        <td><%= event_url.direction %></td>
        <td><%= event_url.recording_url %></td>
        <td><%= event_url.rate %></td>
        <td><%= event_url.start_time %></td>
        <td><%= event_url.network %></td>
        <td><%= event_url.status %></td>
        <td><%= event_url.price %></td>
        <td><%= event_url.duration %></td>
        <td><%= event_url.end_time %></td>
        <td><%=l event_url.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_event_url_path(event_url), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      event_url_path(event_url),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_event_url_path,
            :class => 'btn btn-primary' %>
