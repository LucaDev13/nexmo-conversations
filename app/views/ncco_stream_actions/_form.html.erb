<%= form_for @ncco_stream_action, :html => { :class => "form-horizontal ncco_stream_action" } do |f| %>

  <% if @ncco_stream_action.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@ncco_stream_action.errors.count, "error") %> prohibited this ncco_stream_action from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @ncco_stream_action.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :stream_url, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :stream_url, :class => 'form-control' %>
    </div>
    <%=f.error_span(:stream_url) %>
  </div>
  <div class="form-group">
    <%= f.label :loop, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :loop, :class => 'form-control' %>
    </div>
    <%=f.error_span(:loop) %>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                ncco_stream_actions_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
