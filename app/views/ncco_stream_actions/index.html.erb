<p id="notice"><%= notice %></p>

<h1>Ncco Stream Actions</h1>

<table>
  <thead>
    <tr>
      <th>Stream url</th>
      <th>Loop</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @ncco_stream_actions.each do |ncco_stream_action| %>
      <tr>
        <td><%= ncco_stream_action.stream_url %></td>
        <td><%= ncco_stream_action.loop %></td>
        <td><%= link_to 'Show', ncco_stream_action %></td>
        <td><%= link_to 'Edit', edit_ncco_stream_action_path(ncco_stream_action) %></td>
        <td><%= link_to 'Destroy', ncco_stream_action, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

