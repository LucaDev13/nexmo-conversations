<%= form_for @ncco_input_action, :html => { :class => "form-horizontal ncco_input_action" } do |f| %>

  <% if @ncco_input_action.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@ncco_input_action.errors.count, "error") %> prohibited this ncco_input_action from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @ncco_input_action.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :time_out, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :time_out, :class => 'form-control' %>
    </div>
    <%=f.error_span(:time_out) %>
  </div>
  <div class="form-group">
    <%= f.label :max_digits, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :max_digits, :class => 'form-control' %>
    </div>
    <%=f.error_span(:max_digits) %>
  </div>
  <div class="form-group">
    <%= f.label :submit_on_hash, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :submit_on_hash, :class => 'form-control' %>
    </div>
    <%=f.error_span(:submit_on_hash) %>
  </div>
  <div class="form-group">
    <%= f.label :event_url, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :event_url, :class => 'form-control' %>
    </div>
    <%=f.error_span(:event_url) %>
  </div>
  <div class="form-group">
    <%= f.label :event_method, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :event_method, :class => 'form-control' %>
    </div>
    <%=f.error_span(:event_method) %>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                ncco_input_actions_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
